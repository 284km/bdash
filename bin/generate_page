#!/bin/sh

set -e

PAGE_NAME=$1
mkdir app/renderer/pages/$PAGE_NAME

cat << EOF > app/renderer/pages/$PAGE_NAME/$PAGE_NAME.js
import React from 'react';

export default class $PAGE_NAME extends React.Component {
  render() {
    return <div className="page-$PAGE_NAME">
      $PAGE_NAME page!
    </div>;
  }
}
EOF

cat << EOF > app/renderer/pages/$PAGE_NAME/$PAGE_NAME.css
.page-$PAGE_NAME {
}
EOF

cat << EOF > app/renderer/pages/$PAGE_NAME/index.js
import './$PAGE_NAME.css';
import $PAGE_NAME from './$PAGE_NAME';
export default $PAGE_NAME;
EOF
